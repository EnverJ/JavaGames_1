package ezmet.enver.wordscramble;


import java.util.Random;

import ezmet.enver.mywindow.MyWindow;

public class WordScramble extends MyWindow {

	public WordScramble() {
		setFontSize(30);
		String word="ANIMALS";
		String scrambled=scramble(word);
		print(scrambled);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new WordScramble();

	}
	private String scramble(String word){
		// Please replace the space with the length of the string
   //  String scrambled="";
     Random rand=new Random();
     int length=word.length();
     int index=rand.nextInt(length);
     String firstString=word.substring(index,index+1);
     String secondString=word.substring(index-1, index);
     word=secondString+firstString;
     System.out.println("word= "+word);
      return word;

}
}