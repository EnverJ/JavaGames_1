package ezmet.enver.calcualter;

import com.godtsoft.diyjava.DIYWindow;

public class Calculater_2 extends DIYWindow {

	public Calculater_2() {
		// Convert a String to an Integer
		setFontSize(25);
		print("Enter a word start with y");
		
		String s=input();
		while(s.startsWith("Y")||s.startsWith("y")){
		print("Enter a number");
		 s=input();
        int a=promtForInt("Enter a number");
		print("Enter a number");
		s=input();
		int b=promtForInt("Enter a numer");
		print("Enter a number");
		print("c is "+(a+b));
		
		}
	}
	
	private int promtForInt(String promt){
		
		int i=0;
		print(promt);
		String s=input();
		i=Integer.parseInt(s);
		return i;
		
		
	}

	public static void main(String[] args) {
		new Calculater_2();

	}

}
